{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"no-empty": "off",
		"prefer-const": "warn",
		"no-unused-vars": "warn",
		"quotes": [
			"warn",
			"single"
		],
		"no-useless-escape": "warn",
		"eol-last": [
			"warn",
			"never"
		],
		"comma-dangle": [
			"warn",
			"never"
		],
		"quote-props": [
			"warn",
			"as-needed"
		],
		"semi": [
			"off"
		]
	},
	"ignorePatterns": [
		"dist",
		"node_modules"
	]
}