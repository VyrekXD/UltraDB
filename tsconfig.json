{
	"compilerOptions": {
		"target": "ES6",
		"module": "ESNext",
		"declaration": true,
		"outDir": "./lib",
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"./src"
	],
	"exclude": [
		"./node_modules",
		"./test"
	]
}